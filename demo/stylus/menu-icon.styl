.menu-icon
	display-flex(center, center)
	position: relative
	width: 50px
	height: 50px
	cursor: pointer
	.menu-icon__dot
		transition-all(0.4s)
		margin: 2.5px
		width: 5px
		height: 5px
		border-radius: 5px
		background-color: $white
&.close
	.menu-icon__dot
		margin: 0
		width: 3px
		height: 40px
		&:nth-child(1)
			transform: rotate(225deg)
		&:nth-child(2)
			opacity: 0
			transform: rotate(180deg)
		&:nth-child(3)
			margin: -5px
			transform: rotate(-225deg)
