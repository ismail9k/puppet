.switch
	position: relative
	z-index: 1
	display: block
	margin: 30px auto 0
	width: 68px
	height: 34px
	input
		display: none
		&:checked + .slider
			.slider-icon
				left: calc(100% - 32px)
				background-color: $green
				transform: rotate(360deg)
				div
					&.✅
						display: block
					&.❎
						display: none
	.slider
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		border-radius: 20px
		background-color: $dark
		cursor: pointer
		transition: 0.4s
		.slider-icon
			display-flex(center, center)
			position: absolute
			bottom: 2px
			left: 2px
			width: 30px
			height: 30px
			border-radius: 20px
			background-color: $green
			content: ""
			transition: 0.4s
			div
				transition-all(0.3)
				transform: scale(2)
				width: 100%;
				height: 100%;
				&.✅
					display: none
				&.❎
					display: block
