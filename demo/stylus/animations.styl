@keyframes eye-blinking
	0%
		transform: scaleY(1)
	2%
		transform: scaleY(0.1)
	4%
		transform: scaleY(1)


@keyframes body-angry
	0%
		transform: rotate(0deg)
	1%
		transform: rotate(1deg)
	2%
		transform: rotate(-1deg)
	3%
		transform: rotate(0.5deg)
	4%
		transform: rotate(-0.5deg)
	5%
		transform: rotate(0deg)

@keyframes head-falling
	0%
		transform: perspective(3000px) rotateY(0deg)
	10%, 30%
		transform: perspective(3000px) rotateY(40deg)
	40%, 50%
		transform: perspective(3000px) rotateY(-40deg)
	60%
		transform: perspective(3000px) rotateY(0deg)

@keyframes body-falling
	0%
		transform: translateY(0)
	10%
		transform: translateY(170px)
	15%
		transform: translateY(160px)
	20%, 90%
		transform: translateY(170px)

@keyframes eye-lover
	0%, 20%
		transform: scale(1)
	50%, 60%
		transform: scale(1.5)
	70%, 100%
		transform: scale(1)

@keyframes body-drag
	0%
		transform: rotate(0deg)
	20%
		transform: rotate(2deg)
	40%
		transform: rotate(-2deg)
	60%
		transform: rotate(1deg)
	80%
		transform: rotate(-1deg)
	100%
		transform: rotate(0deg)

@keyframes right-drag
	0%
		transform: rotate(0deg)
	60%
		transform: rotate(21deg)
	100%
		transform: rotate(0deg)

@keyframes left-drag
	0%
		transform: rotate(0deg)
	50%
		transform: rotate(-10deg)
	100%
		transform: rotate(0deg)

@keyframes zzz-sleep
	0%
		transform: translate(0, 0) rotate(0) scale(0)
		fill: $dark
		opacity: 1
	70%
		transform: translate(100px, -150px) rotate(-10deg) scale(1.5)
		fill: $blue
		opacity: 1
	100%
		transform: translate(250px, -250px) rotate(20deg) scale(3)
		fill: $blue
		opacity: 0

@keyframes mouth-sleep
	0%
		transform: scaleY(0.8)
	70%
		transform: scaleY(1.3)
	90%, 100%
		transform: scaleY(0.8)
